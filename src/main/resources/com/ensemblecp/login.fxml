            <Font size="14.0" />
         </font>
      </Label>
      <Label layoutX="100.0" layoutY="215.0" text="Password" textFill="WHITE" AnchorPane.leftAnchor="200.0" AnchorPane.topAnchor="215.0">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
      <!-- Login button -->
      <Button id="login" onAction="#verifyLogin" styleClass="my-btn-class" style="-fx-background-color: #2a2a2a;" stylesheets="@../../css/buttonHoverStyle.css" text="Login" AnchorPane.leftAnchor="240.0" AnchorPane.rightAnchor="240.0" AnchorPane.topAnchor="310.0">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
      </Button>
   </children>
