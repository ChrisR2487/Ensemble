<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="root" prefHeight="450" prefWidth="800" stylesheets="@../../css/application.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ensemblecp.LoginController">
   <children>
      <!-- Software title -->
      <Label alignment="CENTER" layoutX="100.0" layoutY="65.0" text="E N S E M B L E" textFill="WHITE" AnchorPane.leftAnchor="100.0" AnchorPane.rightAnchor="100.0" AnchorPane.topAnchor="65.0">
         <font>
            <Font size="26.0" />
         </font>
      </Label>
      <!-- Close button -->
      <Button fx:id="exitButton" layoutX="754.0" layoutY="7.0" mnemonicParsing="false" onMouseClicked="#exitButton_onClick" prefHeight="29.0" prefWidth="40.0" style="-fx-background-color: transparent;" styleClass="my-btn-class" stylesheets="@../../css/buttonHoverStyle.css" text="X" textFill="WHITE" AnchorPane.rightAnchor="6.0" AnchorPane.topAnchor="7.0">
         <font>
            <Font size="18.0" />
         </font>
      </Button>
      <!-- Login fields -->
      <TextField id="usernameField" fx:id="usernameField" layoutX="300.0" layoutY="158.0" AnchorPane.leftAnchor="300.0" AnchorPane.rightAnchor="300.0" AnchorPane.topAnchor="158.0" />
      <PasswordField fx:id="passwordField" layoutX="300.0" layoutY="236.0" AnchorPane.leftAnchor="300.0" AnchorPane.rightAnchor="300.0" AnchorPane.topAnchor="236.0" />
      <!-- Login labels -->
      <Label layoutX="300.0" layoutY="135.0" text="Username" textFill="WHITE" AnchorPane.leftAnchor="300.0" AnchorPane.topAnchor="135.0">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
      <Label layoutX="300.0" layoutY="215.0" text="Password" textFill="WHITE" AnchorPane.leftAnchor="300.0" AnchorPane.topAnchor="215.0">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
      <!-- Login button -->
      <Button id="login" layoutX="350.0" layoutY="315.0" onAction="#verifyLogin" text="Login" AnchorPane.leftAnchor="350.0" AnchorPane.rightAnchor="350.0" AnchorPane.topAnchor="315.0">
         <font>
            <Font size="14.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
