   <children>
      <!-- Software title -->
      <Label alignment="CENTER" layoutX="100.0" layoutY="65.0" text="E N S E M B L E" textFill="WHITE" AnchorPane.leftAnchor="100.0" AnchorPane.rightAnchor="100.0" AnchorPane.topAnchor="65.0">
         <font>
            <Font size="26.0" />
         </font>
      </Label>
      <!-- Close button -->
      <Button fx:id="exitButton" mnemonicParsing="false" onMouseClicked="#exitButton_onClick" prefHeight="51.0" prefWidth="50.0" style="-fx-background-color: transparent;" styleClass="my-btn-class" stylesheets="@../../css/buttonHoverStyle.css" text="X" textFill="WHITE" AnchorPane.rightAnchor="25.0" AnchorPane.topAnchor="25.0">
