<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane fx:id="borderPane" prefHeight="1920" prefWidth="1080.0" stylesheets="@../../css/application.css" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ensemblecp.customCompController">
   <top>
      <HBox prefHeight="39.0" prefWidth="600.0" BorderPane.alignment="CENTER">
         <children>
            <AnchorPane prefHeight="39.0" prefWidth="1931.0">
               <children>
                  <Label text="E N S E M B L E" textFill="WHITE">
                     <font>
                        <Font size="26.0" />
                     </font>
                  </Label>

                  <!-- Exit button -->
                  <Button fx:id="exitButton" layoutX="1866.0" layoutY="-1.0" mnemonicParsing="false" onMouseClicked="#exitButton_onClick" prefHeight="51.0" prefWidth="50.0" style="-fx-background-color: transparent;" styleClass="my-btn-class" stylesheets="@../../css/buttonHoverStyle.css" text="X" textFill="WHITE">
                     <font>
                        <Font size="36.0" />
                     </font>
                  </Button>

               </children>
            </AnchorPane>
         </children>
      </HBox>
   </top>

   <!-- Component Title -->
   <center>
      <VBox fx:id="mainVBox" prefHeight="1648.0" prefWidth="1936.0" BorderPane.alignment="CENTER">
         <children>
            <HBox prefHeight="47.0" prefWidth="600.0">
               <children>
                  <Label text="Create your Template:" textFill="WHITE">
                     <font>
                        <Font size="32.0" />
                     </font>
                     <HBox.margin>
                        <Insets left="30.0" top="30.0" />
                     </HBox.margin>
                  </Label>
               </children>
            </HBox>
            <VBox prefHeight="108.0" prefWidth="1911.0">
               <children>
                  <Label text="Enter a Title:" textFill="WHITE">
                     <font>
                        <Font size="32.0" />
                     </font>
                     <VBox.margin>
                        <Insets left="30.0" top="20.0" />
                     </VBox.margin>
                  </Label>
                  <AnchorPane prefHeight="78.0" prefWidth="1919.0">
                     <children>
                        <TextField fx:id="compTitle" layoutX="30.0" layoutY="14.0" prefHeight="51.0" prefWidth="750.0" promptText="Enter Title">
                           <font>
                              <Font size="24.0" />
                           </font></TextField>
                     </children>
                  </AnchorPane>
               </children>
            </VBox>
            <!-- Add & Remove Component Buttons -->
            <HBox prefHeight="55.0" prefWidth="1936.0">
               <children>
                  <Button fx:id="addItem" mnemonicParsing="false" onAction="#addField_onClick" prefHeight="30.0" prefWidth="160.0" text="Add Item">
                     <font>
                        <Font size="20.0" />
                     </font>
                     <HBox.margin>
                        <Insets left="30.0" top="10.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="removeItem" mnemonicParsing="false" onAction="#removeField_onClick" prefHeight="30.0" prefWidth="160.0" text="Remove Item">
                     <HBox.margin>
                        <Insets left="30.0" top="10.0" />
                     </HBox.margin>
                     <font>
                        <Font size="20.0" />
                     </font>
                  </Button>
               </children>
            </HBox>

            <!-- Component Content -->
            <ScrollPane prefHeight="1388.0" prefWidth="1936.0" style="-fx-background-color: transparent; -fx-background: transparent;">
               <content>
                  <VBox fx:id="fieldVBox" maxHeight="1053.0" prefHeight="1053.0" prefWidth="1897.0">
                     <children>
                        <HBox alignment="CENTER_LEFT" prefHeight="43.0" prefWidth="1897.0">
                           <children>
                              <MenuButton fx:id="menuButton" alignment="CENTER" contentDisplay="TOP" mnemonicParsing="false" prefHeight="40.0" prefWidth="170.0" text="Entry Type">
                                 <items>
                                    <MenuItem fx:id="stringItem" mnemonicParsing="false" text="String" /> <!--onAction="#setMenuButton" -->
                                    <MenuItem fx:id="intItem" mnemonicParsing="false" text="Integer" />
                                 </items>
                                 <HBox.margin>
                                    <Insets left="30.0" />
                                 </HBox.margin>
                                 <font>
                                    <Font size="18.0" />
                                 </font>
                              </MenuButton>
                              <TextField fx:id="inputField" prefHeight="40.0" prefWidth="900.0">
                                 <HBox.margin>
                                    <Insets />
                                 </HBox.margin>
                                 <font>
                                    <Font size="18.0" />
                                 </font>
                              </TextField>
                           </children>
                           <VBox.margin>
                              <Insets top="10.0" />
                           </VBox.margin>
                        </HBox>
                     </children>
                     <opaqueInsets>
                        <Insets />
                     </opaqueInsets>
                  </VBox>
               </content>
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </ScrollPane>
         </children></VBox>
   </center>
   <bottom>
      <!-- Submit & Cancel Buttons -->
      <AnchorPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="submit_Button" layoutX="1474.0" layoutY="88.0" mnemonicParsing="false" onAction="#submit_Button_onClick" prefHeight="45.0" prefWidth="300.0" text="Submit">
               <font>
                  <Font size="16.0" />
               </font>
            </Button>
            <Button fx:id="cancelButton" layoutX="1159.0" layoutY="88.0" mnemonicParsing="false" onAction="#cancelButton_onClick" prefHeight="45.0" prefWidth="300.0" text="Cancel">
               <font>
                  <Font size="16.0" />
               </font>
            </Button>
         </children>
      </AnchorPane>
   </bottom>
</BorderPane>
