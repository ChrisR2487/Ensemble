<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="1080" prefWidth="1920" stylesheets="@../../css/application.css" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ensemblecp.ProjListController">
   <children>
      <VBox layoutX="27.0" layoutY="126.0" prefHeight="575.0" prefWidth="191.0" AnchorPane.leftAnchor="27.0">
         <children>
            <HBox onMouseClicked="#dashButton_onClick" prefHeight="25.0" prefWidth="160.0">
               <children>
                  <ImageView fitHeight="36.0" fitWidth="28.0" pickOnBounds="true" preserveRatio="true" style="-fx-translate-y: 9;">
                     <Image url="@../button_imgs/dashboard-icon.png" />
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </ImageView>
                  <Button mnemonicParsing="false" onAction="#dashButton_onClick" prefHeight="43.0" prefWidth="143.0" style="-fx-background-color: transparent;" text="Dashboard" textFill="WHITE">
                     <opaqueInsets>
                        <Insets />
                     </opaqueInsets>
                     <HBox.margin>
                        <Insets bottom="10.0" left="10.0" />
                     </HBox.margin>
                     <font>
                        <Font size="22.0" />
                     </font>
                  </Button>
               </children>
            </HBox>
            <HBox onMouseClicked="#projListButton_onClick" prefHeight="28.0" prefWidth="160.0">
               <children>
                  <ImageView fitHeight="27.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true" style="-fx-translate-y: 9;">
                     <Image url="@../button_imgs/projlist-icon.png" />
                  </ImageView>
                  <Button mnemonicParsing="false" onAction="#projListButton_onClick" prefHeight="31.0" prefWidth="117.0" style="-fx-background-color: transparent;" text="Projects" textFill="WHITE">
                     <HBox.margin>
                        <Insets bottom="10.0" left="10.0" />
                     </HBox.margin>
                     <font>
                        <Font size="22.0" />
                     </font></Button>
               </children>
            </HBox>
            <HBox onMouseClicked="#archiveButton_onClick" prefHeight="35.0" prefWidth="160.0">
               <children>
                  <ImageView fitHeight="31.0" fitWidth="36.0" pickOnBounds="true" preserveRatio="true" style="-fx-translate-y: 9;">
                     <Image url="@../button_imgs/archive-icon.png" />
                  </ImageView>
                  <Button mnemonicParsing="false" onAction="#archiveButton_onClick" prefHeight="27.0" prefWidth="130.0" style="-fx-background-color: transparent;" text="Archives" textFill="WHITE">
                     <HBox.margin>
                        <Insets left="10.0" />
                     </HBox.margin>
                     <font>
                        <Font size="22.0" />
                     </font></Button>
               </children>
            </HBox>
         </children>
      </VBox>
      <Label layoutX="14.0" layoutY="23.0" prefHeight="38.0" prefWidth="198.0" text="E N S E M B L E" textFill="WHITE">
         <font>
            <Font size="26.0" />
         </font></Label>
      <Label layoutX="212.0" layoutY="61.0" prefHeight="38.0" prefWidth="221.0" text="Projects" textFill="WHITE">
         <font>
            <Font size="26.0" />
         </font>
      </Label>
      <TableView fx:id="projectTable" minHeight="-Infinity" minWidth="-Infinity" AnchorPane.leftAnchor="245.0" AnchorPane.rightAnchor="350.0" AnchorPane.topAnchor="120.0">
        <columns> <!-- Width = 1325 for rightAnchor=350.0, leftAnchor=245.0 -->
           <TableColumn fx:id="statusColumn" prefWidth="130.0" text="Status" />
           <TableColumn fx:id="issueScoreColumn" prefWidth="100.0" text="Issue Score" />
           <TableColumn fx:id="titleColumn" prefWidth="200.0" text="Title" />
           <TableColumn fx:id="pidColumn" prefWidth="75.0" text="Project ID" />
           <TableColumn fx:id="kickoffColumn" prefWidth="125.0" text="Start Date" />
           <TableColumn fx:id="deadlineColumn" prefWidth="125.0" text="End Date" />
           <TableColumn fx:id="manidNameColumn" prefWidth="200.0" text="Project Manager" /> <!-- TODO: Change to manager name -->
           <TableColumn fx:id="tagsColumn" prefWidth="368.0" text="Tags" />
        </columns>
      </TableView>
      <ImageView fx:id="exitButton" layoutX="1814.0" layoutY="30.0" onMouseClicked="#exitButton_onClick">
         <Image url="@../button_imgs/close_button.png" />
      </ImageView>
   </children>
</AnchorPane>
