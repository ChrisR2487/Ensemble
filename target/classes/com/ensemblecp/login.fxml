<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane fx:id="root" prefHeight="450" prefWidth="800" stylesheets="@../../css/login.css" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ensemblecp.LoginController">
   <children>
      <!-- Software title -->
      <Label alignment="CENTER" text="E N S E M B L E" textFill="WHITE" AnchorPane.leftAnchor="100.0" AnchorPane.rightAnchor="100.0" AnchorPane.topAnchor="50.0">
         <font>
            <Font size="26.0" />
         </font>
      </Label>
      <!-- Close button -->
      <ImageView fx:id="exitButton" onMouseClicked="#exitButton_onClick" AnchorPane.rightAnchor="25.0" AnchorPane.topAnchor="25.0">
         <Image url="@../button_imgs/close_button.png" />
      </ImageView>
      <!-- Login fields -->
      <TextField id="usernameField" fx:id="usernameField" AnchorPane.leftAnchor="300.0" AnchorPane.rightAnchor="300.0" AnchorPane.topAnchor="150.0" />
      <PasswordField fx:id="passwordField" AnchorPane.leftAnchor="300.0" AnchorPane.rightAnchor="300.0" AnchorPane.topAnchor="250.0" />
      <!-- Login labels -->
      <Label text="Username" textFill="WHITE" AnchorPane.leftAnchor="300.0" AnchorPane.topAnchor="120.0" >
         <font>
            <Font size="14.0" />
         </font>
      </Label>
      <Label text="Password" textFill="WHITE" AnchorPane.leftAnchor="300.0" AnchorPane.topAnchor="220.0" >
         <font>
            <Font size="14.0" />
         </font>
      </Label>
      <!-- Login button -->
      <Button id="login" text="Login" onAction="#verifyLogin" AnchorPane.leftAnchor="350.0" AnchorPane.rightAnchor="350.0" AnchorPane.topAnchor="310.0">
         <font>
            <Font size="14.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
